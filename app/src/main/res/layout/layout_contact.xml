    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorGrey"
        >

        <ImageView
            android:id="@+id/stimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/stfullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="" />

            <ImageView
                android:id="@+id/stdelete"
                android:layout_width="50dp"
                android:layout_height="25dp"

                android:layout_alignParentEnd="true"

                android:layout_marginLeft="140dp"
                android:layout_marginEnd="33dp"
                android:src="@drawable/ic_delete_black_24dp"
                android:text="Delete" />

            <TextView
                android:id="@+id/st_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stfullname"
                android:layout_marginTop="10dp"
                android:text="" />


            <TextView
                android:id="@+id/staddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/st_age"
                android:layout_marginTop="10dp"
                android:text="" />

            <TextView
                android:id="@+id/stgender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/staddress"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="137dp"
                android:layout_marginTop="52dp"
                android:layout_toRightOf="@id/staddress"
                android:text="Female" />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>